@page
@model Assignment2.Pages.Category.IndexModel
@{
    ViewData["Title"] = "Categories Management";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6">@ViewData["Title"]</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Category
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Categories != null && Model.Categories.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Parent</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model.Categories)
                            {
                                <tr>
                                    <td>@category.CategoryId</td>
                                    <td>@category.CategoryName</td>
                                    <td>@category.CategoryDescription</td>
                                    <td>
                                        @if (category.ParentCategoryId > 0)
                                        {
                                            <span class="badge bg-secondary">
                                                @(Model.Categories.FirstOrDefault(c => c.CategoryId == category.ParentCategoryId)?.CategoryName ?? "N/A")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-dark">None</span>
                                        }
                                    </td>
                                    <td>
                                        @if (category.IsActive == true)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm gap-1" role="group">
											
												<a asp-page="Detail" asp-route-id="@category.CategoryId">
                                                    <button type="button" class="btn btn-outline-info" title="Detail">
													<i class="bi bi-eye"></i>
                                                </button>
												</a>
											
                                            
                                            <a asp-page="Update" asp-route-id="@category.CategoryId">
												<button type="button" class="btn btn-outline-warning" title="Edit">
													<i class="bi bi-pencil"></i>
												</button>
                                                
                                            </a>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@category.CategoryId"
                                                  onsubmit="return confirm('Are you sure you want to delete this category?');">
                                                <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No categories found.
                </div>
            }
        </div>
    </div>
</div>