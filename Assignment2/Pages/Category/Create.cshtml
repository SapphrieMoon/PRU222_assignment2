@page
@model Assignment2.Pages.Category.CreateModel
@{
    ViewData["Title"] = "Create New Category";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Category.CategoryName" class="control-label"></label>
                    <input asp-for="Category.CategoryName" class="form-control" />
                    <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Category.CategoryDescription" class="control-label"></label>
                    <textarea asp-for="Category.CategoryDescription" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Category.CategoryDescription" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Category.ParentCategoryId" class="control-label"></label>
                    <select asp-for="Category.ParentCategoryId" asp-items="Model.ParentCategories" class="form-control">
                        <option value="">-- Select Parent Category --</option>
                    </select>
                </div>

                <div class="form-group form-check">
                    <input asp-for="Category.IsActive" class="form-check-input" />
                    <label asp-for="Category.IsActive" class="form-check-label"></label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}