@page
@model Assignment2.Pages.Category.DetailModel
@{
    ViewData["Title"] = "Category Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <article class="card shadow-sm border-0">
                <header class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>@ViewData["Title"]
                    </h4>
                </header>
                <div class="card-body">
                    <h5 class="fw-bold text-primary mb-3">@Model.Category.CategoryName</h5>

                    <p class="text-muted small">
                        <i class="bi bi-hash"></i> ID: <strong>@Model.Category.CategoryId</strong>
                    </p>

                    <p class="mb-4">
                        @if (!string.IsNullOrWhiteSpace(Model.Category.CategoryDescription))
                        {
                            @Model.Category.CategoryDescription
                        }
                        else
                        {
                            <em>No description provided.</em>
                        }
                    </p>

                    <hr />

                    <p class="mb-2">
                        <strong>Parent Category:</strong>
                        @if (Model.Category.ParentCategoryId > 0)
                        {
                            <span class="badge bg-secondary">@Model.ParentCategoryName</span>
                        }
                        else
                        {
                            <span class="badge bg-light text-dark">None</span>
                        }
                    </p>

                    <p class="mb-0">
                        <strong>Status:</strong>
                        @if (Model.Category.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </p>
                </div>

                <footer class="card-footer bg-light d-flex justify-content-end">
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                </footer>
            </article>
        </div>
    </div>
</div>
